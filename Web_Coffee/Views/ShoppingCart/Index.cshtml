@model IEnumerable<Web_Coffee.Models.SanPham>

@{
    ViewBag.Title = "Shopping Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="cart-title">Your Shopping Cart</h2>

@if (!Model.Any())
{
    <p class="empty-cart-message">Your cart is empty.</p>
}
else
{
    <div class="cart-container">
        <table class="table cart-table">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><img src="@item.Hinhanh" alt="@item.TenSanPham" class="cart-image" /></td>
                        <td>@item.TenSanPham</td>
                        <td>@item.LoaiSanPham?.TenLoaiSanPham</td>
                        <td>@item.GiaBan.ToString("C")</td>
                        <td>1</td> <!-- Replace with actual quantity selected by user -->
                        <td>@item.GiaBan.ToString("C")</td>
                        <td>
                            <a href="@Url.Action("RemoveFromCart", new { id = item.MaSanPham })" class="btn btn-danger btn-sm">Remove</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="text-right">
            <!-- Button to trigger the checkout modal -->
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#checkoutModal">
                Checkout
            </button>
        </div>
    </div>
}

<!-- Checkout Modal -->
<div class="modal fade" id="checkoutModal" tabindex="-1" role="dialog" aria-labelledby="checkoutModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="checkoutModalLabel">Confirm Checkout</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to checkout with the following items?</p>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.TenSanPham</td>
                                <td>@item.GiaBan.ToString("C")</td>
                                <td>1</td> <!-- Replace with actual quantity selected by user -->
                                <td>@item.GiaBan.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <form method="post" action="@Url.Action("ProcessCheckout", "ShoppingCart")">
                    <button type="submit" class="btn btn-primary">Confirm Checkout</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Bootstrap CSS -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<!-- jQuery (required for Bootstrap JavaScript plugins) -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>

<!-- Popper.js (required for Bootstrap JavaScript plugins) -->
<script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.5.4/dist/umd/popper.min.js"></script>

<!-- Bootstrap JavaScript -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<style>
    /* Cart Container */
    .cart-container {
        margin: 20px auto;
        padding: 40px;
        background-color: #f9f9f9;
    }

    /* Cart Table */
    .cart-table {
        width: 100%;
        margin-bottom: 20px;
        border-collapse: collapse;
    }

        .cart-table th,
        .cart-table td {
            padding: 10px;
            text-align: center;
            border-bottom: 1px solid #ddd;
        }

        .cart-table th {
            background-color: #34251E;
            color: white;
            font-size: 0.9em;
        }

        .cart-table td {
            background-color: #fff;
        }

    /* Cart Image */
    .cart-image {
        width: 80px;
        height: 80px;
        object-fit: cover;
        border-radius: 5px;
    }

    /* Buttons */
    .btn-primary,
    .btn-danger {
        padding: 5px 10px;
        font-size: 0.9em;
    }

    /* Text Alignment */
    .text-right {
        text-align: right;
    }
</style>
