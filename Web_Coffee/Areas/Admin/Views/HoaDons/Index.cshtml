@model IEnumerable<Web_Coffee.Models.HoaDon>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layoutadmin.cshtml";
}

<h2>Index</h2>
<div id="page-wrapper">
    <div id="page-inner">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.KhachHang.TenKhachHang)</th>
                    <th>@Html.DisplayNameFor(model => model.NhanVien.TenNhanVien)</th>
                    <th>@Html.DisplayNameFor(model => model.NgayLapHoaDon)</th>
                    <th>@Html.DisplayNameFor(model => model.TongTien)</th>
                    <th>@Html.DisplayNameFor(model => model.GhiChu)</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.KhachHang.TenKhachHang)</td>
                        <td>@Html.DisplayFor(modelItem => item.NhanVien.TenNhanVien)</td>
                        <td>@Html.DisplayFor(modelItem => item.NgayLapHoaDon)</td>
                        <td>@Html.DisplayFor(modelItem => item.TongTien)</td>
                        <td>@Html.DisplayFor(modelItem => item.GhiChu)</td>
                        <td>
                            @Html.ActionLink("Details", "Details", new { id = item.MaHoaDon }, new { @class = "btn btn-info btn-sm" })
                            <!-- Add Edit and Delete buttons if needed -->
                            <!--
                            @Html.ActionLink("Edit", "Edit", new { id = item.MaHoaDon }, new { @class = "btn btn-warning btn-sm" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.MaHoaDon }, new { @class = "btn btn-danger btn-sm" })
                            -->
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /. PAGE INNER  -->
</div>
